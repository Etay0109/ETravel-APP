<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:padding="32dp">

    <!-- Welcome -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/login_LBL_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/welcome_margin_top"
        android:text="@string/welcome_text"
        android:textSize="@dimen/welcome_text_size"
        android:textColor="@color/primary_text_color"
        android:fontFamily="sans-serif"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- App Name -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/login_LBL_appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/app_name_display"
        android:textSize="@dimen/app_name_text_size"
        android:textStyle="bold"
        android:textColor="@color/primary_text_color"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toBottomOf="@id/login_LBL_welcome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Subtitle -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/login_LBL_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/login_subtitle"
        android:textSize="@dimen/subtitle_text_size"
        android:textColor="@color/white"
        android:fontFamily="sans-serif"
        app:layout_constraintTop_toBottomOf="@id/login_LBL_appName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Login title -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/login_LBL_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_title"
        android:textSize="@dimen/login_text_size"
        android:textStyle="bold"
        android:textColor="@color/primary_text_color"
        android:textDirection="ltr"
        android:layout_marginTop="@dimen/login_marginTop"
        app:layout_constraintTop_toBottomOf="@id/login_LBL_subtitle"
        app:layout_constraintLeft_toLeftOf="parent" />

    <!-- Email Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/login_CARD_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/login_field_marginTop"
        app:cardCornerRadius="@dimen/card_radius"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/login_LBL_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layoutDirection="ltr"
            android:gravity="start"
            android:padding="@dimen/card_inner_padding">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email_label"
                android:textSize="@dimen/username_text_size"
                android:textColor="#8B9CAD"
                android:fontFamily="sans-serif"
                android:textDirection="ltr"
                android:layoutDirection="ltr"
                android:gravity="start" />

            <EditText
                android:id="@+id/login_ET_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="@string/login_hint_email"
                android:inputType="textEmailAddress"
                android:textDirection="ltr"
                android:gravity="start"
                android:layoutDirection="ltr"
                android:textColor="@color/primary_text_color"
                android:textSize="@dimen/username_text_size"
                android:textColorHint="#B0BEC5" />

        </androidx.appcompat.widget.LinearLayoutCompat>
    </com.google.android.material.card.MaterialCardView>

    <!-- Password Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/login_CARD_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/password_field_marginTop"
        app:cardCornerRadius="@dimen/card_radius"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/login_CARD_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layoutDirection="ltr"
            android:gravity="start"
            android:padding="@dimen/card_inner_padding">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_label_password"
                android:textSize="@dimen/password_label_text_size"
                android:textColor="#8B9CAD"
                android:fontFamily="sans-serif"
                android:textDirection="ltr"
                android:layoutDirection="ltr"
                android:gravity="start" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layoutDirection="ltr">

                <EditText
                    android:id="@+id/login_ET_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/login_IMG_togglePassword"
                    android:background="@null"
                    android:hint="@string/login_hint_password"
                    android:inputType="textPassword"
                    android:textDirection="ltr"
                    android:gravity="start"
                    android:textColor="@color/primary_text_color"
                    android:textSize="@dimen/password_text_size"
                    android:textColorHint="#B0BEC5" />



                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/login_IMG_togglePassword"
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_eye_close"
                    android:clickable="true"
                    app:tint="#8B9CAD" />
            </RelativeLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </com.google.android.material.card.MaterialCardView>

    <!-- Sign In Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/login_BTN_signIn"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_sign_in_height"
        android:layout_marginTop="@dimen/sign_in_marginTop"
        android:text="@string/sign_in_text"
        android:textSize="@dimen/sign_in_text_size"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:cornerRadius="@dimen/corner_radius_sign_in"
        app:backgroundTint="#2D5F8D"
        app:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/login_CARD_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Sign in with Google Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/login_BTN_signInGoogle"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:text="Sign in with Google"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#2D5F8D"
        android:textDirection="ltr"
        app:cornerRadius="28dp"
        app:strokeColor="#2D5F8D"
        app:strokeWidth="2dp"
        app:backgroundTint="@android:color/white"
        app:elevation="2dp"
        app:iconGravity="textStart"
        app:iconTint="@null"
        app:layout_constraintTop_toBottomOf="@id/login_BTN_signIn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- New user? Sign Up text -->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/login_LAYOUT_signUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layoutDirection="ltr"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/login_BTN_signInGoogle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Donâ€™t have an account "
            android:textSize="14sp"
            android:textColor="#5A7A99"
            android:fontFamily="sans-serif" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/login_LBL_signUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textSize="14sp"
            android:textColor="#2D5F8D"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:clickable="true"
            android:focusable="true" />
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>
    <FrameLayout
        android:id="@+id/login_OVERLAY_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone"
        android:clickable="true">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/login_LOTTIE_loading"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            app:lottie_rawRes="@raw/loading_text"
            app:lottie_loop="true"/>

    </FrameLayout>

</FrameLayout>


